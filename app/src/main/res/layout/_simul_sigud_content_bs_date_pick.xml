<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_et_height"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/putih">
                    <EditText
                        android:id="@+id/et_dd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="DD"
                        android:inputType="number"
                        android:paddingLeft="@dimen/auth_padding_horizontal_sides"
                        android:singleLine="true"
                        android:textColorHint="@color/colorText"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/margin_medium"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/putih">
                    <EditText
                        android:id="@+id/et_mm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="MM"
                        android:inputType="number"
                        android:paddingLeft="@dimen/auth_padding_horizontal_sides"
                        android:singleLine="true"
                        android:textColorHint="@color/colorText"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/margin_medium"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/putih">
                    <EditText
                        android:id="@+id/et_yyyy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="YYYY"
                        android:inputType="number"
                        android:paddingLeft="@dimen/auth_padding_horizontal_sides"
                        android:singleLine="true"
                        android:textColorHint="@color/colorText"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <include
                android:visibility="gone"
                android:id="@+id/comp_btn_confirm"
                layout="@layout/_simul_sigud_component_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"/>
-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>