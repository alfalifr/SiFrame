<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sidev.lib.implementation.act.MainAct"
    tools:ignore="MissingConstraints" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_sm"
            android:textColor="@color/hitam"
            android:text="To ViewPagerAct"
            android:onClick="toVpAct"/>

        <TextView
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_sm"
            android:textColor="@color/hitam"
            android:text="To DrawerAct"
            android:onClick="toDrawerAct"/>

        <TextView
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_sm"
            android:textColor="@color/hitam"
            android:text="To VpDrawerAct"
            android:onClick="toVpDrawerAct"/>

        <TextView
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_sm"
            android:textColor="@color/hitam"
            android:text="To SingleFragAct"
            android:onClick="toSingleFragAct"/>

    </LinearLayout>

</ScrollView>
